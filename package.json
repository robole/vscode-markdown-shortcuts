        }
      },
      {
        "key": "ctrl+m ctrl+6",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert heading level 6"
        }
      },
      {
        "key": "ctrl+m ctrl+s",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert strikethrough"
        }
      },
      {
        "key": "ctrl+m ctrl+t",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
