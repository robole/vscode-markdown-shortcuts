        }
      },
      {
        "key": "ctrl+m ctrl+1",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert heading level 1"
        }
      },
      {
        "key": "ctrl+m ctrl+2",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert heading level 2"
        }
      },
      {
        "key": "ctrl+m ctrl+3",
