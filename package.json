{
  "name": "markdown-shortcuts",
  "displayName": "Markdown Shortcuts",
  "publisher": "robole",
  "author": {
    "name": "Rob O'Leary"
  },
  "description": "Markdown shortcuts for snippets.",
  "icon": "img/logo.png",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.0.0"
  },
  "bugs": {
    "url": "https://github.com/robole/vscode-markdown-shortcuts/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/robole/vscode-markdown-shortcuts"
  },
  "license": "MIT",
  "categories": [
    "Keymaps"
  ],
  "galleryBanner": {
    "color": "#ffbbbb",
    "theme": "light"
  },
  "keywords": [
    "markdown",
    "shortcuts",
    "snippets",
    "keyboard shortcuts",
    "keymaps"
  ],
  "extensionPack": [
    "robole.markdown-snippets"
  ],
  "contributes": {
    "keybindings": [
      {
        "key": "ctrl+b",
        "mac": "cmd+b",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert bold text"
        }
      },
      {
        "key": "ctrl+i",
        "mac": "cmd+i",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert italic text"
        }
      },
      {
        "key": "ctrl+m ctrl+q",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert quoted text"
        }
      },
      {
        "key": "ctrl+m ctrl+c",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert code"
        }
      },
      {
        "key": "ctrl+m ctrl+f",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert fenced code block"
        }
      },
      {
        "key": "ctrl+m ctrl+u",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert unordered list"
        }
      },
      {
        "key": "ctrl+m ctrl+o",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert ordered list"
        }
      },
      {
        "key": "ctrl+m ctrl+h",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
          "name": "Insert horizontal rule"
        }
      },
      {
        "key": "ctrl+m ctrl+l",
        "command": "editor.action.insertSnippet",
        "when": "editorTextFocus && editorLangId == markdown",
        "args": {
          "langId": "markdown",
